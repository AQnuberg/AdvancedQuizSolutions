@model IEnumerable<QuizApp.Models.Rol>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rolnaam)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rolnaam)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Rolnaam }) |
            @Html.ActionLink("Details", "Details", new { id=item.Rolnaam }) |
