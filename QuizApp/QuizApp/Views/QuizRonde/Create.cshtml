@model QuizApp.Models.QuizRonde

@{
    ViewBag.Title = "Create";
}

<h2>Ronde toevoegen</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EvenementID, new { @Value = ViewBag.evenementID, @class="hidden" })
                @Html.ValidationMessageFor(model => model.EvenementID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rondenummer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rondenummer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rondenummer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThemaID, "Thema", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ThemaID, (SelectList)ViewBag.Themas, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ThemaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "Index", new { id = ViewBag.EvenementID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
