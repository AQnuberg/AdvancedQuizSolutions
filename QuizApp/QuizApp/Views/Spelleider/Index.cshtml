@model IEnumerable<QuizApp.Models.Evenement>

@{
    ViewBag.Title = "Index";
}

<h2>Quiz leiden</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Evenement_Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begintijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eindtijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Locatie.Locatie_Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evenement_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Evenement_Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Begintijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eindtijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locatie.Locatie_Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Evenement_Type)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Account.Email)  
        </td>
        <td>
            @Html.ActionLink("Start het evenement", "Details", new { id = item.EvenementID }) 
        </td>
    </tr>
}

</table>
