@model QuizApp.Models.VraagInQuiz

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>VraagInQuiz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VraagInQuizID)

        <div class="form-group">
            @Html.LabelFor(model => model.QuizRondeID, "QuizRondeID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top : 7px">
                @Html.HiddenFor(model => model.QuizRondeID)
                @Html.DisplayFor(model => model.QuizRondeID)
                @Html.ValidationMessageFor(model => model.QuizRondeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuizVraagID, "QuizVraagID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top : 7px">
                @Html.HiddenFor(model => model.QuizVraagID)
                @Html.DisplayFor(model => model.QuizVraagID)
                @Html.ValidationMessageFor(model => model.QuizVraagID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuizVraagID, "Quiz vraag", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="padding-top : 7px">
                @Html.DisplayFor(model => model.QuizVraag.Vraag)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isActief, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.isActief)
                    @Html.ValidationMessageFor(model => model.isActief, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug naar vragenlijst", "Details", new { id = Model.QuizRonde.EvenementID })
</div>
