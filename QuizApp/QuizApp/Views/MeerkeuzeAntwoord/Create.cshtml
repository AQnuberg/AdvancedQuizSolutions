@model QuizApp.Models.MeerkeuzeAntwoord

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h4>@Html.Raw(ViewBag.Vraag)</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Meerkeuze_Antwoord, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Meerkeuze_Antwoord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Meerkeuze_Antwoord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.QuizVraagID, new {@Value = ViewBag.VraagID, @class = "hidden" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Is_Juist, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Is_Juist)
                    @Html.ValidationMessageFor(model => model.Is_Juist, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "index", new { controller = "MeerkeuzeAntwoord", id = ViewBag.VraagID})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
