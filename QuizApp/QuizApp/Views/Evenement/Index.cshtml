@model IEnumerable<QuizApp.Models.Evenement>

@{
    ViewBag.Title = "Index";
}

<h2>Evenement beheren</h2>

<p>
    @Html.ActionLink("Create Evenement", "Create") |
    @Html.ActionLink("Create Locatie", "Create", "Locatie")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Evenement_Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begintijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eindtijd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evenement_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Locatie.Locatie_Naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Evenement_Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Begintijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eindtijd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Evenement_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locatie.Locatie_Naam)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EvenementID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EvenementID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EvenementID }) |
            @Html.ActionLink("Ronde toevoegen", "Create", new { controller = "QuizRonde", action = "Create", id = item.EvenementID })
        </td>
    </tr>
}

</table>
